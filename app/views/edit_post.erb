<div class="container">
  <h1>Welcome to CloneList!</h1>
    <h2>
      Edit Post for: <%= @post.name %>
    </h2>
    <form action='/posts/edit/<%= @post.secret_key %>' method='post'>
      <label name='post'>Edit Name</label>
      <input type='text' name='post[name]' placeholder='<%= @post.name %>'>
      <br>
      <label name='post'>Edit Price</label>
      <input type='text' name='post[price]' placeholder='<%= @post.price %>'>
      <br>
      <label name='post'>Edit Email</label>
      <input type='text' name='post[email]' placeholder='<%= @post.email %>'>
      <br>
      <label name='post'>Edit Location</label>
      <input type='text' name='post[location]' placeholder='<%= @post.location %>'>
      <br>
      <br>
      <input type='submit' value='UPDATE POST'>
    </form>
</div>
